
<%- include('../../partials/header.ejs') %>

<body>

<%- include('../../partials/homenavbar.ejs') %>

<div class="container">



    <% result.articles.rows.forEach(article =>{ %>        <!--   rows Ã© o nome da lista do findAndCountAll -->
        <br>
        <div class="card">
            <div class="card-header">
                <%- article.title %>
            </div>
            <div class="card-body">
                <a class="btn btn-success" href="/<%-article.slug%>">Ler artigo</a>
            </div>
        </div>
    



    <% }) %>



    <div class="row">
        <div class="col col-12">
            <% if (result.next) { %>

                <a style="float: right;" href="/articles/page/<%-result.page + 1%>"> Next >>>></a>

            <% } %>


            <% if (result.page > 2) { %>

                <a href="/articles/page/<%-result.page - 1%>"><<<< Prev</a>

            <% } else if (result.page == 2) { %>

                <a href="/"><<<< Prev</a>

            <% } %>
               
        
        </div>
    </div>

</div>
    





</body>

