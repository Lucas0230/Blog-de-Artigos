
<%- include('../../partials/header.ejs') %>

<body>
    
    <%- include('../../partials/navbar.ejs') %>

    <div class="container">
        <hr>
        <h2>Categorias</h2>
        <a class="btn btn-success" href="/admin/categories/new">Criar nova categoria</a>
        <hr>
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Título</th>
                    <th>Slug</th>
                    <th>Ações</th>
                </tr>
            </thead>
            <tbody>

                <!-- CADA CATEGORIA É UM TR -->

                <% categories.forEach(category =>{ %>

                    <tr>
                        <th> <%- category.id %> </th>
                        <th> <%- category.title %> </th>
                        <th> <%- category.slug %> </th>
                        <th> 
    
                            <a href="/admin/categories/edit/<%- category.id %>" class="btn btn-warning">Editar</a>
                            
                            <!--  -->
                            <form method="POST" action="/categories/delete" style="display: inline;" onsubmit="confirmarDel(event, this)">
                                <input type="hidden" name="id" value=" <%- category.id %> ">
                                <button class="btn btn-danger">Deletar</button>
                            </form>
                        </th>
                    </tr>

                <% }) %>

            </tbody>
        </table>
    </div>

</body>


<%- include('../../partials/footer.ejs') %>

<script>

    //Função para confirmar o envio do form

    function confirmarDel(event, form) {

        event.preventDefault();             
        var decision = confirm('Voce quer deletar?') ;      //função do js
        
        if (decision) {             // Isso é igual a (decision == true)
            form.submit();
        } else {
            alert('Ok, nada foi deletado!')
        }
    }
</script>